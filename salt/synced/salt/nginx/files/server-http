
upstream {{ upstream }} {
    server      unix:///var/sockets/{{ host }}.sock;
}

server {
    listen      80;
    server_name {{ host }};
    charset     utf-8;
    root        {{ path }};

    resolver            8.8.8.8;
    client_max_body_size 5M;

    location {{ static_url }} {
        alias       {{ path }}{{ static_relative }};
        access_log  off;
        expires     30d;
    }

    location / {
        uwsgi_pass  {{ upstream }};
        include     uwsgi_params;
    }
}
